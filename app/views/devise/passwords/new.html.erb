<div class="signup-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>reset password</h2>
    <p>memory problems uh? we got ya ;)</p>
    <hr>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email address' %><br>
        </div>
    </div>
    <div class="form-group">
        <%=f.submit("reset password", {:class=>'btn btn-lg btn-primary btn-block'})%>
    </div>
    </form>
    <div class="text-center">already have an account? <a href="#"><%= render "devise/shared/links" %></a></div>
    <% end %>
</div>
