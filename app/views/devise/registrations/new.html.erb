<div class="signup-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>signup</h2>
    <p>enter the information to register sucessfully</p>
    <hr>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email address' %><br>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'password' %>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span><i class="fa fa-check"></i>
            <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: 'confirm password' %>
        </div>
    </div>
    <div class="form-group">
        <%=f.submit("signup", {:class=>'btn btn-lg btn-primary btn-block'})%>
    </div>
    </form>
    <div class="text-center">already have an account? <a href="#"><%= render "devise/shared/links" %></a></div>
    <% end %>
</div>