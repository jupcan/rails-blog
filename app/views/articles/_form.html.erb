<%= render 'shared/errors', obj: @article %>
<div class="create">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><a>title</a></span>
                <%= f.text_field :title, class: "form-control", autofocus: true %><br>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><a>text</a></span>
                <%= f.text_area :description, rows: 10, class: "form-control"%>
            </div>
        </div>
        <div class="form-group">
            <%=f.submit("post", {:class=>'btn btn-lg btn-primary btn-block'})%>
        </div>
        </form>
        <% end %>
    </div>