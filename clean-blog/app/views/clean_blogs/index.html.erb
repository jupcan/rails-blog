<title>tbitblog</title>

<%= render 'shim' %>
<%= render 'navigation' %>
<%= render 'header' %>
<% @articles.each do |article| %>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="post-preview">
                <%= link_to article_path(article) do %>
                    <h1 class="post-title">
                        <%= article.title %>
                    </h1>
                    <h3 class="post-subtitle">
                        <%= truncate(article.description, length: 70, omission: '... (read more)') %>
                    </h3>
                <% end %>
                <p class="post-meta">posted by <a><%= link_to article.user.email.split('@').first, edit_user_registration_path%></a> on <%= article.created_at.strftime("%B %d %Y")%></p>
                <%= link_to "edit", edit_article_path(article), class: "btn btn-xs btn-primary" %>
                <%= link_to "delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
            </div>
            <hr>
        </div>
    </div>
</div>

<br>
<% end %>
<%= render 'footer' %>